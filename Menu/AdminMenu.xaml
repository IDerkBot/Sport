<Page x:Class="Sport.Menu.AdminMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sport.Menu"
      mc:Ignorable="d" 
      d:DesignHeight="105" d:DesignWidth="200"
      Title="AdminMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Клиенты" x:Name="Clients" Click="Clients_Click"/>
        <Button Grid.Row="1" Content="Товары" x:Name="Products" Click="Products_Click"/>
        <Button Grid.Row="2" Content="Заказы" x:Name="Orders" Click="Orders_Click"/>
    </Grid>
</Page>
